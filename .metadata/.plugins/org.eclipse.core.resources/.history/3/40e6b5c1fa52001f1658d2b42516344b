<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.simple.basic.service.board.BoardMapper">

    <!-- 게시글 등록 -->
    <insert id="insertBoard" parameterType="com.simple.basic.command.BoardVO">
        INSERT INTO SBOARD (num, name, title, content)
        VALUES (SBOARD_SEQ.NEXTVAL, #{name}, #{title}, #{content})
    </insert>

    <!-- 게시글 목록 조회 -->
    <select id="selectBoardList" resultType="com.simple.basic.command.BoardVO">
        SELECT num, name, title, content
        FROM SBOARD
        ORDER BY num DESC
    </select>
    
    <delete id="delete" parameterType="int">
   DELETE FROM SBOARD WHERE NUM = #{NUM}
    
    </delete>

</mapper>
